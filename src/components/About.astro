      <img src="/Kento.png" alt="">
    </div>
  </div>
</div>

<style>
  .section {
    width: 100%;
    background-color: #efefef;
    padding: 60px 20px;
  }

  .container {
    max-width: 1080px;
    padding: 15px;
    margin: 0 auto;
    display: flex;
    gap: 40px;
    align-items: center;
    flex-wrap: wrap;
  }

  .content-section {
    flex: 1 1 55%;
  }

  .image-section {
    flex: 1 1 40%;
  }

  .image-section img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  .content-section .title {
    text-transform: uppercase;
    font-size: clamp(2rem, 2rem + 3.25vw, 2rem);
  }

  .content-section .content h3 {
    margin-top: 20px;
    color: #262626;
    font-size: 21px;
  }

  .content-section .content p {
    margin-top: 10px;
    font-size: 17px;
    line-height: 1.5;
  }

  .content-section .content .button {
    margin-top: 30px;
  }

  .content-section .content .button a {
    background-color: #3d3d3d;
    padding: 12px 40px;
    text-decoration: none;
    color: white;
    font-size: 18px;
    letter-spacing: 1.5px;
    border-radius: 4px;
    transition: 0.3s ease;
  }

  .content-section .content .button a:hover {
    background-color: #0b0b0b;
    color: #fff;
  }

  .content-section .social {
    margin-top: 30px;
  }

  .content-section .social i {
    color: #000000;
    font-size: 28px;
    margin-right: 15px;
    transition: 0.3s ease;
  }

  .content-section .social i:hover {
    color: #3d3d3d;
  }

  @media screen and (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 20px;
    }

    .content-section,
    .image-section {
      flex: 1 1 100%;
    }
  }
</style>
